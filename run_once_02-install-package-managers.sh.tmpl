#!/usr/bin/env bash

set -euo pipefail

# Bootstrap package managers (idempotent)
# mise handles everything (including rust, uv, cargo tools via backends)
# brew/apt only for system-level packages mise can't install

echo "Installing package managers..."

{{- if eq .chezmoi.os "darwin" }}

# --- Homebrew (macOS only, needed for system-level packages) ---
if ! command -v brew &>/dev/null; then
    echo "Installing Homebrew..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi
if [[ $(arch) == "arm64" ]]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
elif [[ $(arch) == "i386" ]]; then
    eval "$(/usr/local/bin/brew shellenv)"
fi
echo "Homebrew ready"

{{- end }}

# --- mise (primary tool manager) ---
if ! command -v mise &>/dev/null; then
    echo "Installing mise..."
    curl https://mise.run | sh
    export PATH="$HOME/.local/bin:$PATH"
fi
echo "mise ready"

echo "Package managers ready"
