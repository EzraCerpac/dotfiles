#!/usr/bin/env bash

set -euo pipefail

# Bootstrap package managers (idempotent)
# mise handles everything (including rust, uv, cargo tools via backends)
# brew/apt only for system-level packages mise can't install

echo "Installing package managers..."

{{- if eq .chezmoi.os "darwin" }}

# --- Homebrew (macOS only) ---
if ! command -v brew &>/dev/null; then
    echo "Installing Homebrew..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi
if [[ $(arch) == "arm64" ]]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
elif [[ $(arch) == "i386" ]]; then
    eval "$(/usr/local/bin/brew shellenv)"
fi
echo "Homebrew ready"

# --- mise (via brew on macOS â€” auto-activates in fish) ---
if ! command -v mise &>/dev/null; then
    echo "Installing mise via Homebrew..."
    brew install mise
fi
echo "mise ready"

{{- end }}

{{- if eq .chezmoi.os "linux" }}

# --- chezmoi (install permanently to ~/.local/bin) ---
if ! command -v chezmoi &>/dev/null; then
    echo "Installing chezmoi to ~/.local/bin..."
    sh -c "$(curl -fsLS get.chezmoi.io)" -- -b ~/.local/bin
    export PATH="$HOME/.local/bin:$PATH"
fi
echo "chezmoi ready"

# --- mise (via curl on Linux) ---
if ! command -v mise &>/dev/null; then
    echo "Installing mise..."
    curl https://mise.run | sh
    export PATH="$HOME/.local/bin:$PATH"
fi
echo "mise ready"

{{- end }}

echo "Package managers ready"
