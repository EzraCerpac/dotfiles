[edit]
command = "nvim"

[git]
autoCommit = true
autoPush = true

{{- $home := .chezmoi.homeDir -}}
# Add more paths/dirs hereâ€¦
{{- $readd_paths := list
    (joinPath $home ".config/nvim/spell/")
-}}

[unimportant]

[hooks.apply.pre]
command = "chezmoi"
args = [
  "re-add",
  {{- range $i, $p := $readd_paths -}}
  {{- if $i}}, {{ end -}}
  {{ printf "%q" $p }}
  {{- end -}}
]

[data]
name = "Ezra Cerpac"
email = "e.cerpac@icloud.com"

[diff]
pager = "delta"
exclude = ["scripts"]

[merge]  # NOTE: may need to use custom pycharm-merge tool instead (untested)
command = "pycharm"
args = [
  "merge",
  {{ printf "%q" "{{ .Destination }}" }},
  {{ printf "%q" "{{ .Source }}" }},
  {{ printf "%q" "{{ .Target }}" }}
]

[template]
options = ["missingkey=error"]

