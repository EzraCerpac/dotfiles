[edit]
command = "nvim"

[git]
autoCommit = true
autoPush = false

{{- $home := .chezmoi.homeDir -}}
# Add more paths/dirs hereâ€¦
{{- $readd_paths := list
    (joinPath $home ".config/nvim/spell/")
-}}

[unimportant]

[hooks.apply.pre]
command = "bash"
args = [
  "-c",
  "command -v chezmoi >/dev/null && chezmoi re-add {{ range $readd_paths }}{{ . }} {{ end }}|| true"
]

[data]
name = "Ezra Cerpac"
email = "e.cerpac@icloud.com"

[diff]
pager = "delta"
exclude = ["scripts"]

[merge]  # NOTE: may need to use custom pycharm-merge tool instead (untested)
command = "pycharm"
args = [
  "merge",
  {{ printf "%q" "{{ .Destination }}" }},
  {{ printf "%q" "{{ .Source }}" }},
  {{ printf "%q" "{{ .Target }}" }}
]

[template]
options = ["missingkey=error"]

